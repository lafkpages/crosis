{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES6",
    "module": "ES6",
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES6"],
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"]
    },
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "exclude": ["dist"]
}
